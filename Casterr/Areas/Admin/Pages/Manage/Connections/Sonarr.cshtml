@page
@model Casterr.Areas.Admin.Pages.Manage.Connections.SonarrModel
@{
    ViewData["Title"] = "Sonarr";
}
<h1>Sonarr configuration</h1>
<form method="post">
    <div class="mb-3">
        <label for="apiUrl" class="form-label">Url</label>
        <input type="text" class="form-control" id="apiUrl" name="apiUrl" value="@Model.apiUrl">
    </div>
    <div class="mb-3">
        <label for="key" class="form-label">Api Key</label>
        <input type="text" class="form-control" id="key" name="key" value="@Model.Key">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>